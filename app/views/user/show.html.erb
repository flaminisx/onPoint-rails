<header class="valign-wrapper">
	<div class="container">
		<div class='valign center'>
			<%= image_tag "/images/"+((!@user.avatar.nil?)? @user.avatar : 'bg.jpg'), class: "head-img circle"%><br>
			<h4 class="name"><%= @user.name %> <%= @user.surname %></h4>
  			<div class="row">
  				<div class="col l3 offset-l4 left-align">Coins:</div>
  				<div class="col l1 right-align"><%= @user.money %></div>
  			</div>
  			<div class="row">
  				<div class="col l3 offset-l4 left-align">Level:</div>
  				<div class="col l1 right-align"><%= 1 %></div>
  			</div>
		</div>
	</div>
</header>
<div class="progress" style="margin:0">
	<div class="determinate green" style="width: 70%"></div>
</div>
<main>
	<div class="container">
		<h3 class="center-align">Last Quests</h3>
		<ul class="collection quests">
			<% @quests.each do |q|%>
			<li class="collection-item avatar" id='<%= q.id %>'>
				<%= image_tag "/images/"+((!q.logo.nil?)? q.logo : 'bg.jpg'), class: "circle"%>
				<span class="title"><%= q.name%></span>
				<p>
					<%= q.description %><br>
					Reward: <%= q.reward %>
				</p>
				<a class="secondary-content"><i class="material-icons">done</i></a>
			</li>
			<% end %>
		</ul>
	</div>
</main>
<footer class="page-footer grey darken-3">
	<div class="container-fluid">
		<div class="col s12 ">Made by Our Team in 2016</div>
	</div>
</footer>